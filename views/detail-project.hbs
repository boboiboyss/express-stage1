<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/detailProject.css" />
    <script
      src="https://kit.fontawesome.com/1693852aac.js"
      crossorigin="anonymous"
    ></script>
    <title>Detail Project</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-left">
        <a href="/">
          <img src="../assets/img/logo.png" alt="logo" />
        </a>
        <ul>
          <li><a href="/">Home</a></li>
          {{#if isLogin}}
          <li><a href="/project">Add Project</a></li>
          {{/if}}
        </ul>
        <a href="/testimonials" class="testi"> Testimonials </a>
      </div>
      <div class="nav-right">
        {{#if isLogin}}
          <span class="mr-4">Haii, {{user.name}}</span>
           <a href="/logout">Logout</a>
         {{/if}}
         {{#unless isLogin}}
          <a href="/register">Register</a>
          <a href="/login">Login</a>
         {{/unless}}
        <a href="/contact-form">Contact Me</a>
      </div>
      <div class="icon-hamburger" onclick="toggleElement()">
        <i class="fa-solid fa-bars fa-2x"></i>
      </div>
    </nav>

    <div class="menu" id="toggle">
      <div class="action-icon">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/project">Add Project</a></li>
        </ul>
        <div class="testi">
          <a href="/testimonials" class="testi"> Testimonials </a>
        </div>
        <div class="btn-contact">
          <a href="/contact-form">Contact Me</a>
        </div>
      </div>
    </div>

    <div class="project-detail">
      <div id="project">
        <div class="container-detail">

    <h1>{{project.title}}</h1>
    <div class="wrapper">
        <div class="left">
            <img src="/uploads/{{project.image}}" alt="img-detail" />
        </div>
        <div class="right">
            <div class="date">
                <p>Duration</p>
                <div class="time">
                    <i class="fa-regular fa-calendar-days"></i>
                    <span>{{project.startDate}} - {{project.endDate}}</span>
                </div>
                <div class="duration">
                    <i class="fa-solid fa-clock"></i>
                    <span>{{project.duration}}</span>    
                </div>
            </div>
            <div class="tech">
                <p>Technologies</p>
                <div class="list-tech">
                {{{project.react}}}
                {{{project.node}}}
                {{{project.next}}} 
                {{{project.ts}}}
                </div>
            </div>    
        </div>
    </div>
    <div class="desc">
        <div style="font-weight: 600; font-style:italic;">created : {{project.createdAt}} by {{project.name}}</div>
        <p>{{project.description}}</p>
    </div>
    </div>
      </div>
    </div>
    <script src="../assets/js/toggle.js"></script>
    {{!-- <script src="../assets/js/projectDetail.js"></script> --}}
  </body>
</html>
